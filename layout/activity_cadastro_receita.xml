<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.app.nutrinfo.CadastroReceita"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="81dp">


            <AutoCompleteTextView
                android:id="@+id/tituloReceita"
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                android:hint="Digite o nome da Receita"
                tools:ignore="HardcodedText"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/categoria"
                android:textSize="18sp"
                app:layout_constraintLeft_toRightOf="@+id/Categoria_receita"
                app:layout_constraintTop_toBottomOf="@+id/tituloReceita"
                tools:ignore="RtlHardcoded"
                android:layout_marginStart="8dp" />

            <Spinner
                android:id="@+id/Categoria_receita"
                android:layout_width="282dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toRightOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/tituloReceita"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Ingrediente"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                tools:ignore="HardcodedText,RtlHardcoded"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/textView4" />

            <AutoCompleteTextView
                android:id="@+id/nomeIngrediente"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:hint="Digite o nome do ingrediente"
                app:layout_constraintLeft_toRightOf="@+id/textView3"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Categoria_receita"
                tools:ignore="HardcodedText,RtlHardcoded"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantidade"
                android:textSize="18sp"
                tools:ignore="HardcodedText"
                android:layout_marginTop="7dp"
                app:layout_constraintTop_toBottomOf="@+id/nomeIngrediente"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/addIngr"
                android:layout_marginStart="8dp" />

            <EditText
                android:id="@+id/qtdIngrediente"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:ems="10"
                android:inputType="numberDecimal"
                app:layout_constraintTop_toBottomOf="@+id/nomeIngrediente"
                app:layout_constraintLeft_toRightOf="@+id/textView4"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp" />

            <Spinner
                android:id="@+id/unidade"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toRightOf="@+id/qtdIngrediente"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/qtdIngrediente"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/addIngr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adicionar Ingrediente"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/qtdIngrediente"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="234dp"
                tools:layout_editor_absoluteY="371dp"
                tools:layout_editor_absoluteX="0dp" />

            <ListView
                android:id="@+id/listaIngr"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MODO DE PREPARO"
                android:textSize="18sp"
                tools:ignore="HardcodedText"
                app:layout_constraintTop_toBottomOf="@+id/listaIngr"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/modoPreparo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="0dp"
                android:ems="10"
                android:hint="Digite o modo de preparo"
                android:inputType="textMultiLine"
                app:layout_constraintBottom_toTopOf="@+id/guideline4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                tools:ignore="HardcodedText" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="450dp"
                tools:layout_editor_absoluteY="587dp"
                tools:layout_editor_absoluteX="0dp" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="392dp"
                tools:layout_editor_absoluteY="529dp"
                tools:layout_editor_absoluteX="0dp" />
            <Button
                android:id="@+id/btnFoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foto"
                tools:ignore="HardcodedText"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline2"
                app:layout_constraintRight_toLeftOf="@+id/guideline3"
                android:layout_marginRight="32dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline4"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/salvar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salvar"
                tools:ignore="HardcodedText"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline2"
                android:layout_marginLeft="32dp"
                app:layout_constraintLeft_toLeftOf="@+id/guideline3"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline4"
                android:layout_marginTop="8dp" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="192dp"
                tools:layout_editor_absoluteY="137dp"
                tools:layout_editor_absoluteX="192dp" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>