<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cdd4e6"
    tools:context="com.app.nutrinfo.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="219dp"
        android:layout_height="63dp"
        app:srcCompat="@drawable/logo"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/imgNome"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/user"
        app:layout_constraintTop_toTopOf="@+id/etNome"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toLeftOf="@+id/etNome"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/etNome"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etNome"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:inputType="textPersonName"
        android:text="Nome"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLogo"
        tools:layout_editor_absoluteX="81dp" />

    <ImageView
        android:id="@+id/imgEmail"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/email"
        app:layout_constraintRight_toLeftOf="@+id/etSenha"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/etSenha"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/etSenha"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/etNome" />

    <ImageView
        android:id="@+id/imgSenha"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/cadeado"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/etEmail"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/etEmail"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBottom_toBottomOf="@+id/etEmail"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.833" />

    <EditText
        android:id="@+id/etSenha"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/etEmail" />

    <EditText
        android:id="@+id/etDnasc"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:inputType="date"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/etSenha" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/calendario"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/etDnasc"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/etDnasc"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/etDnasc"
        android:layout_marginBottom="8dp" />

</android.support.constraint.ConstraintLayout>